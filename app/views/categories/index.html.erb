<%= provide(:title, "Manage Tasks") %>
<%= provide(:button_text, "Add") %>

<div class="index">
  <div class="categories">
    <%= render 'categories/category' %>
  </div>
  <div class="aside">
    <%= render 'categories/category_form' %>
    <div class="stats">
      <h2>Statistics</h2>
      <li><%= pluralize(total_items, "total task") %></li>
      <li><%= pluralize(overdue_items, "overdue task") %></li>
      <li><%= pluralize(today_items, "task") %> due today</li>
      <li><%= pluralize(week_items, "task") %> due this week</li>
    </div>
  </div>
</div>
