<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= render 'layouts/default_head' %>
    <%= render 'shared/shim' %>
  </head>

  <body>
    <%= render 'layouts/header' %>
    <div class="content">
      <%= render 'shared/flash' %>
      <%= render 'layouts/title' unless @skip_title %>
      <%= yield %>
      <!-- <%= debug(params) if Rails.env.development? %> -->
    </div>
    <%= render 'layouts/footer' unless @skip_footer %>
  </body>
</html>
