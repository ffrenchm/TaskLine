<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= render 'layouts/default_head' %>
    <%= render 'shared/shim' %>
  </head>

  <body>
    <%= render 'layouts/header' %>
    <div class="content">
      <%= render 'shared/flash' %>
      <div class="page-header">
        <h1 class="page-title"><%= yield(:title) %></h1>
      </div>
      <%= yield %>
      <!-- <%= debug(params) if Rails.env.development? %> -->
    </div>
    <%= render 'layouts/footer' %>
  </body>
</html>
