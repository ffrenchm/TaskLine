<div class="above-aside">
  <%= form_for @team, remote: true do |f| %>
  <div class="input-group">
    <%= f.text_field :name, placeholder: "New Team", class: "form-control" %>
    <div class="input-group-btn">
      <%= f.submit "Create", class: "btn btn-primary" %>
    </div>
  </div>
  <li class="form-control">
    <%= f.radio_button :public, 0, checked: true %> Private
    <%= f.radio_button :public, 1 %> Public
  </li>
  <% end %>
</div>
