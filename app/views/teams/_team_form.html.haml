= form_for @team, remote: true do |f|
  .input-group
    = f.text_field :name, placeholder: "New Team", class: "form-control"
    %span.input-group-btn
      = f.submit yield(:button_text), class: "btn btn-primary"
  %br/
  = f.radio_button :public, 0, checked: true
  Private
  = f.radio_button :public, 1
  Public
