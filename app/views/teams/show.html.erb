<%= provide(:title, @team.name) %>

<div class="split-layout">
  <div class="main">
    <div class="box">
      <div class="title-wrapper">
        <h2><%= @team.name %></h2>
      </div>
      <div class="sub-box">
        <div class="sub-info">
          <%= pluralize(@team.users.count, "Member") %>
        </div>
        </br>
        <% @team.users.each do |user| %>
        <li class="team-member">
          <span>
            <%= image_tag user.picture.url,
            size: "39x39",
            class: "small-pic" %>
          </span>
          
          <span class="member-name"><%= user.name %></span>
          <% if Membership.find_by(
          user_id: user.id,
          team_id: @team.id).admin == true %>
            <span class="admin-tag">Admin</span>
          <% end %>
          <% if user == current_user %>
            <span class="you-tag">You</span>
          <% end %>
        </li>
        <% end %>
      </div>
      </br>
      <%= link_to "Back", teams_path %>
    </div>
  </div>

  <div class="aside">
    <div class="box">
      <h2>Options</h2>
      <div class="sub-box">
        <h3>Invite someone to the team</h3>
        <%= form_for @invite, url: invites_path do |f| %>
        <%= f.hidden_field :team_id, value: @invite.team_id %>
        <div class="input-group">
          <%= f.email_field :email,
          placeholder: "Email",
          class: "form-control" %>
          <div class="input-group-btn">
            <%= f.submit 'Invite to Team',
            class: "btn btn-primary" %>
          </div>
        </div>
        <% end %>
      </div>
      </br>
      <% if @membership %>
        <%= link_to "Leave Team",
        team_membership_path(@team, @membership),
        method: :delete %>
      <% else %>
        <%= link_to "Join",
        team_memberships_path(@team),
        method: :post %>
      <% end %>
    </div>
  </div>
</div>
