<div class="items">
  <% if @items.count != 0 %>
    <p class="toggle-completed">Toggle Completed</p>
  <% else %>
    <p>This category is empty. Create a new task by clicking the plus icon.</p></br>
  <% end %>
  <% @items.each do |item| %>
    <% unless item.id.nil? %>
      <% if item.completed == false %>
        <div class="item">
      <% else %>
        <div class="completed-item">
      <% end %>
        <%= link_to complete_path(item.category, item) do %>
          <div class="tickbox"><span>
            <i class="fa fa-check"></i>
          </span></div>
        <% end %>
        <div class="info">
          <span class="item-content"><%= item.content %></span>
          <% d = item.deadline_date
             t = item.deadline_time %>
          <% if (d && !t && d < Time.now && !item.completed) ||
                (d && t && !item.completed &&
                (d + t.seconds_since_midnight.seconds).to_datetime < Time.now) %>
              <li class="item-overdue-deadline">
          <% else %>
              <li class="item-deadline">
          <% end %>
            <%= deadline_date(d) +
                comma(d, t) +
                deadline_time(t) %>
          </li>
        </div>
        <div class="links">
          <span class="delete-item">
            <%= link_to "", [item.category, item], method: :delete, class: "fa fa-trash" %>
          </span>
          <span class="edit-item">
            <%= link_to "", edit_category_item_path(item.category, item), class: "fa fa-pencil-square-o" %>
          </span>
          <span class="move-item">
            <%= link_to "", '#', class: "fa fa-arrow-left" %>
          </span>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
